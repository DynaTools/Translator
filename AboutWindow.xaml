<Window x:Class="ClipboardTranslator.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sobre" Height="300" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <Image Source="/Resources/translate_icon.png" Width="64" Height="64" Margin="0,0,0,10"/>
            <TextBlock Text="Clipboard Translator" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="VersionText" Text="Versão 1.0.0" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="0,20,0,0" TextAlignment="Center">
            Um aplicativo para tradução automática do conteúdo da área de transferência,
            desenvolvido para aumentar a produtividade em comunicações multilíngues.
            <LineBreak/><LineBreak/>
            <Hyperlink Click="Hyperlink_Click">GitHub do Projeto</Hyperlink>
            <LineBreak/><LineBreak/>
            Criado com base no conceito original em Python.
            <LineBreak/><LineBreak/>
            © 2025 Todos os direitos reservados.
        </TextBlock>

        <Button Grid.Row="2" Content="Fechar" Width="80" HorizontalAlignment="Center" Margin="0,15,0,0" Click="CloseButton_Click"/>
    </Grid>
</Window>
<Window x:Class="ClipboardTranslator.ApiKeysWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuração de API Keys" Height="250" Width="450"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Configuração de Chaves de API" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1">
            <GroupBox Header="Google Cloud Translation API" Padding="10">
                <StackPanel>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                        Insira sua chave de API do Google Cloud para usar o serviço oficial de tradução.
                        <LineBreak/>
                        <LineBreak/>
                        Se não inserir uma chave, uma API não-oficial será usada, com limitações.
                        <LineBreak/>
                        <Hyperlink Click="HelpLink_Click">Como obter uma chave?</Hyperlink>
                    </TextBlock>

                    <Label Content="Chave de API:" Margin="0,5,0,0"/>
                    <TextBox x:Name="GoogleApiKeyTextBox" Margin="0,5,0,5" Padding="5,3"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancelar" Width="80" Margin="0,0,10,0" Click="CancelButton_Click"/>
            <Button Content="Salvar" Width="80" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>